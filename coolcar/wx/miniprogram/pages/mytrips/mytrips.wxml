<swiper 
    indicator-dots="{{true}}"
    autoplay="{{true}}"
    interval="5000"
    duration="500"
    current="{{current}}"
    circular="{{true}}"
    display-multiple-items="1"
    previous-margin="0px"
    next-margin="0px"
    vertical="{{false}}"
    bindchange="onSwiperChange">
    <swiper-item wx:for="{{imageUrls}}"
                wx:key="imageId" bindtap="onImageItemTap"
                data-promotion-id="{{item.imageId}}">
        <image class="swiper-image" src="{{item.img}}" />
    </swiper-item>
</swiper>
<view class="avatar-container margin-top margin-right-xl">
    <view class="avatar margin-right">
        <button wx:if="{{!avatarURL}}" class="cu-avatar round"
            open-type="getUserInfo" bindgetuserinfo="onGetUser">
            <text class="cuIcon-people"></text>
        </button>
        <image wx:if="{{avatarURL}}" class="cu-avatar round"
            src="{{avatarURL}}"></image>
    </view>
    <view class="text-blue" bindtap="onRegisterTap">驾驶资格未认证</view>
</view>